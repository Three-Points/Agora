{
    "name": "agora",
    "version": "0.2.0",
    "description": "A Little Blog Post",
    "main": "./src/main.jsx",
    "scripts": {
        "prettier": "npx prettier --write .",
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview --port 8080",
        "start": "yarn build && yarn preview",
        "storybook": "start-storybook -p 6006 --no-open",
        "build-storybook": "build-storybook",
        "chromatic": "doppler run --command='npx chromatic --project-token=$CHROMATIC_TOKEN'"
    },
    "dependencies": {
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-spinners": "0.11.0"
    },
    "devDependencies": {
        "@babel/core": "7.17.8",
        "@commitlint/cli": "16.2.3",
        "@commitlint/config-conventional": "16.2.1",
        "@storybook/addon-actions": "6.4.19",
        "@storybook/addon-essentials": "6.4.19",
        "@storybook/addon-interactions": "6.4.19",
        "@storybook/addon-links": "6.4.19",
        "@storybook/react": "6.4.19",
        "@storybook/testing-library": "0.0.9",
        "@vitejs/plugin-react": "1.0.7",
        "autoprefixer": "10.4.4",
        "babel-loader": "8.2.4",
        "chromatic": "6.5.3",
        "husky": "7.0.4",
        "postcss": "8.4.12",
        "storybook-builder-vite": "0.1.21",
        "tailwindcss": "3.0.23",
        "vite": "2.8.6"
    },
    "repository": "git@github.com:Three-Points/Agora.git",
    "author": "@roremDev <rorem.94.developer@gmail.com>",
    "license": "MIT",
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "parserPreset": "conventional-changelog-conventionalcommits",
        "rules": {
            "type-case": [
                2,
                "always",
                "lower-case"
            ],
            "type-empty": [
                2,
                "never"
            ],
            "type-enum": [
                2,
                "always",
                [
                    "feat",
                    "fix",
                    "docs",
                    "style",
                    "refactor",
                    "test",
                    "ci",
                    "work",
                    "chore",
                    "remove"
                ]
            ],
            "scope-empty": [
                0
            ],
            "subject-case": [
                2,
                "always",
                "lower-case"
            ],
            "subject-empty": [
                2,
                "never"
            ],
            "subject-full-stop": [
                2,
                "never",
                "."
            ]
        }
    }
}
